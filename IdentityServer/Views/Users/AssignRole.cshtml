@model RoleAssignSendModel
@{
    Layout = "_Layout";
}
<form asp-action="AssignRole" asp-controller="User" method="post" class="p-3 w-75 mx-auto shadow">
    <input type="hidden" asp-for="UserId" />
    <div class="list-group">
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
            <input type="hidden" asp-for="@Model.Roles[i].RoleId" />
            <label class="list-group-item">
                <input class="form-check-input me-1" asp-for="@Model.Roles[i].Exist">@Model.Roles[i].RoleName
            </label>
        }

    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
    <div class="text-danger mt-3" asp-validation-summary="ModelOnly"></div>
</form>
