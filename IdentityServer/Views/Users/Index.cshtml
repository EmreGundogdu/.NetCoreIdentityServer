@model List<AppUser>
@{
    Layout = "_Layout";
}
<a asp-action="Create" asp-controller="User" class="d-inline-block my-2">Add A New User</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Username</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Role Info</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.Gender</td>
                <td>@item.Email</td>
                <td><get-user-info user-id="@item.Id"></get-user-info></td>
                <td>
                    <a asp-action="AssignRole" asp-route-id="@item.Id">Assign Role</a>
                </td>
            </tr>
        }

    </tbody>
</table>