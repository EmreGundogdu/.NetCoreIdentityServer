<!DOCTYPE html>

<html>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Identity Server Application</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand">Navbar</a>
                <button class="navbar-toggler" type="button"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">



                        @if (User != null && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link active">Pricing</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="SignOut" asp-controller="Home">Çıkış Yap</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-action="Create" asp-controller="Home" class="nav-link">Kayıt Ol</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="SignIn" asp-controller="Home">Giriş Yap</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <section>
        <div class="container mt-2">
            @RenderBody()
        </div>
    </section>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
